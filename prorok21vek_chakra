        };

        // Конфигурация чакр с названиями, цветами и базами карт
        const chakrasConfig = {
            muladhara: {
                name: "Муладхара • Корневая чакра",
                color: "#dc3545",
                glow: "rgba(220, 53, 69, 0.3)",
                cards: muladharaCards,
                description: chakraDescriptions.muladhara
            },
            svadhisthana: {
                name: "Свадхистхана • Сакральная чакра",
                color: "#ff6b35",
                glow: "rgba(255, 107, 53, 0.3)",
                cards: svadhisthanaCards,
                description: chakraDescriptions.svadhisthana
            },
            manipura: {
                name: "Манипура • Солнечное сплетение",
                color: "#ffd60a",
                glow: "rgba(255, 214, 10, 0.3)",
                cards: manipuraCards,
                description: chakraDescriptions.manipura
            },
            anahata: {
                name: "Анахата • Сердечная чакра",
                color: "#40916c",
                glow: "rgba(64, 145, 108, 0.3)",
                cards: anahataCards,
                description: chakraDescriptions.anahata
            },
            vishuddha: {
                name: "Вишудха • Горловая чакра",
                color: "#0077b6",
                glow: "rgba(0, 119, 182, 0.3)",
                cards: vishudhaCards,
                description: chakraDescriptions.vishuddha
            },
            ajna: {
                name: "Аджна • Третий глаз",
                color: "#7209b7",
                glow: "rgba(114, 9, 183, 0.3)",
                cards: ajnaCards,
                description: chakraDescriptions.ajna
            },
            sahasrara: {
                name: "Сахасрара • Коронная чакра",
                color: "#6f2dbd",
                glow: "rgba(111, 45, 189, 0.3)",
                cards: sahasraraCards,
                description: chakraDescriptions.sahasrara
            }
        };

        let isCardOpen = false;
        let currentChakra = null;
        let currentCard = null;

        function openCard() {
            if (isCardOpen) return;
            
            isCardOpen = true;
            const overlay = document.getElementById('overlay');
            const cardContainer = document.getElementById('cardContainer');
            const loader = document.getElementById('loader');
            const cardContent = document.getElementById('cardContent');

            // Выбираем случайную чакру
            const chakraKeys = Object.keys(chakrasConfig);
            const randomChakraKey = chakraKeys[Math.floor(Math.random() * chakraKeys.length)];
            currentChakra = chakrasConfig[randomChakraKey];

            // Выбираем случайную карту из выбранной чакры
            currentCard = currentChakra.cards[Math.floor(Math.random() * currentChakra.cards.length)];

            // Устанавливаем CSS переменные для цвета чакры
            document.documentElement.style.setProperty('--chakra-color', currentChakra.color);
            document.documentElement.style.setProperty('--chakra-glow', currentChakra.glow);

            // Показываем overlay и карточку
            overlay.classList.add('show');
            cardContainer.classList.add('show');

            // Показываем загрузчик
            loader.style.display = 'flex';
            cardContent.style.display = 'none';

            // Сбрасываем состояние всех секций
            resetSections();

            // Симулируем загрузку
            setTimeout(() => {
                // Заполняем контент
                document.getElementById('chakraName').textContent = currentChakra.name;
                document.getElementById('chakraDescription').innerHTML = currentChakra.description;
                document.getElementById('cardType').textContent = currentCard.type;
                document.getElementById('cardQuestion').textContent = currentCard.question;
                document.getElementById('cardMessage').textContent = currentCard.message;
                document.getElementById('cardTask').textContent = currentCard.task;

                // Управляем отображением секции "Выпавшая карта"
                const cardTypeSection = document.getElementById('cardTypeSection');
                if (DATABASE_CONFIG.showCardTypeSection) {
                    cardTypeSection.classList.remove('hidden');
                } else {
                    cardTypeSection.classList.add('hidden');
                }

                // Управляем кнопкой "Открыть карту"
                const openWebsiteBtn = document.getElementById('openWebsiteBtn');
                if (currentCard.url && currentCard.url.trim() !== '') {
                    openWebsiteBtn.classList.add('visible');
                } else {
                    openWebsiteBtn.classList.remove('visible');
                }

                // Скрываем загрузчик и показываем контент
                loader.style.display = 'none';
                cardContent.style.display = 'block';

                // Анимируем появление секций
                const sections = document.querySelectorAll('.card-section:not(.hidden)');
                sections.forEach((section, index) => {
                    setTimeout(() => {
                        section.classList.add('show');
                    }, index * 200);
                });

            }, 2000 + Math.random() * 1000); // 2-3 секунды загрузки
        }

        function resetSections() {
            // Скрываем все секции контента и сбрасываем кнопки
            const sections = ['chakraDescription', 'cardType', 'cardQuestion', 'cardMessage', 'cardTask'];
            sections.forEach(sectionId => {
                const content = document.getElementById(sectionId + 'Content');
                if (content) {
                    const button = content.parentElement.querySelector('.reveal-btn');
                    
                    content.classList.remove('revealed');
                    if (button) button.textContent = 'Показать';
                }
            });

            // Убираем анимацию с секций
            const cardSections = document.querySelectorAll('.card-section');
            cardSections.forEach(section => {
                section.classList.remove('show');
            });

            // Скрываем кнопку "Открыть карту"
            const openWebsiteBtn = document.getElementById('openWebsiteBtn');
            openWebsiteBtn.classList.remove('visible');
        }

        function revealSection(sectionId) {
            const content = document.getElementById(sectionId + 'Content');
            const button = content.parentElement.querySelector('.reveal-btn');
            
            if (content.classList.contains('revealed')) {
                content.classList.remove('revealed');
                button.textContent = 'Показать';
            } else {
                content.classList.add('revealed');
                button.textContent = 'Скрыть';
            }
        }

        function openWebsite() {
            if (currentCard && currentCard.url && currentCard.url.trim() !== '') {
                window.open(currentCard.url, '_blank');
            }
        }

        function closeCard() {
            if (!isCardOpen) return;
            
            const overlay = document.getElementById('overlay');
            const cardContainer = document.getElementById('cardContainer');

            // Сбрасываем состояние секций
            resetSections();

            // Скрываем карточку и overlay
            overlay.classList.remove('show');
            cardContainer.classList.remove('show');

            // Сбрасываем состояние через некоторое время
            setTimeout(() => {
                isCardOpen = false;
                currentChakra = null;
                currentCard = null;
                const loader = document.getElementById('loader');
                const cardContent = document.getElementById('cardContent');
                loader.style.display = 'flex';
                cardContent.style.display = 'none';
                
                // Сбрасываем CSS переменные
                document.documentElement.style.setProperty('--chakra-color', '#dc3545');
                document.documentElement.style.setProperty('--chakra-glow', 'rgba(220, 53, 69, 0.3)');
            }, 500);
        }

        // Закрытие по ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && isCardOpen) {
                closeCard();
            }
        });

        // Предотвращаем закрытие при клике на карточку
        document.getElementById('cardContainer').addEventListener('click', function(e) {
            e.stopPropagation();
        });

        // Улучшенная адаптивность при изменении ориентации
        window.addEventListener('orientationchange', function() {
            setTimeout(() => {
                // Принудительно пересчитываем позицию карточки
                if (isCardOpen) {
                    const cardContainer = document.getElementById('cardContainer');
                    cardContainer.style.transform = 'translate(-50%, -50%) scale(1)';
                }
            }, 100);
        });

        // ===== ИНСТРУКЦИИ ПО УПРАВЛЕНИЮ =====
        /*
        
        📋 ИНСТРУКЦИЯ ПО УПРАВЛЕНИЮ БАЗОЙ ДАННЫХ:
        
        🔧 Чтобы ВКЛЮЧИТЬ секцию "Выпавшая карта":
        1. Найдите строку: showCardTypeSection: false,
        2. Измените на: showCardTypeSection: true,
        
        🔧 Чтобы ОТКЛЮЧИТЬ секцию "Выпавшая карта":
        1. Найдите строку: showCardTypeSection: true,
        2. Измените на: showCardTypeSection: false,
        
        🔗 Чтобы добавить ссылку для кнопки "Открыть карту":
        1. Найдите нужную карту в массиве карт
        2. Добавьте или измените поле "url": "https://your-website.com"
        3. Если поле "url" пустое или отсутствует, кнопка будет скрыта
        
        💡 Примеры:
        - "url": "https://example.com" - кнопка будет видна и активна
        - "url": "" - кнопка будет скрыта
        - без поля "url" - кнопка будет скрыта
        
        */
    </script>
</body>
</html>
